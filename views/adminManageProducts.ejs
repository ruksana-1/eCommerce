<!DOCTYPE html>
<html lang="en">

<!-- adding admin head partials -->
<!-- ======= Head ======= -->
  <%- include('partials/adminHead') %>
<!-- End Head -->

<body>
    
    <!--   adding admin header partials-->
    <!-- ======= Header ======= -->
    <%- include('partials/adminHeader') %>
    <!-- End Header -->
    
    <!-- adding admin sidebar partials -->
    <!-- ======= Sidebar ======= -->
    <%- include('partials/adminSidebar') %>
    <!-- End Sidebar -->

    <main id="main" class="main">

        <!-- Page Title-->
        <div class="pagetitle">
            <h1>Manage Products</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/adminHome">Home</a></li>
                <li class="breadcrumb-item">Products</li>
                <li class="breadcrumb-item active">Manage</li>
              </ol>
            </nav>
        </div><!-- End Page Title -->
        <br>
        <h1 class="d-flex justify-content-center" style="color: #012970; text-shadow: 1px 1px #b1b7ec;">All Products Information</h1>
        <br>
        
        <section class="section">
            <div class="row">
    
                <div class="card">
                    <div class="card-body">
    
                        <div>
                          <h2 class="d-flex justify-content-center my-3 my-sm-5">Manage Products</h2>
                        </div>
    
                        <div class="d-flex justify-content-end my-2 m-sm-4">
                          <a class="btn btn-success" href="/admin/products/manage/add">ADD A NEW PRODUCT</a>
                        </div>


                        <!-- Table with hoverable rows -->
                        <div class="table-responsive">
                            <table class="table table-hover datatable pt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">BrandName</th>
                                        <th scope="col">Category</th> 
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock</th>
                                        <th scope="col">View</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>                                     
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach((product, index) => { %> 
                                        <tr>
                                            <th scope="row"><%= index + 1 %></th>
                                            <td scope="col"><img src="\<%= product.thumbnailsPath %>"></td>
                                            <td scope="col"><%= product.brandName %></td>
                                            <td scope="col"><%= product.category.name %></td> 
                                            <td scope="col"><%= product.price %>.00</td>
                                            <td scope="col"><%= product.stockCount %>pc</td>
                                            <td scope="col"><a href="/admin/products/manage/view/<%= product._id %>"><button class="btn btn-primary">View</button></a></td>
                                            <td scope="col">
                                                <form action="/admin/products/manage/edit" method="post">
                                                    <input type="hidden" name="id" value="<%= product._id %>">
                                                    <button class="btn btn-warning">Edit</button>
                                                </form>
                                            </td>
                                            <td scope="col">
                                                <form action="/admin/products/manage/delete" method="post" id="deleteProduct">
                                                    <input type="hidden" name="id" value="<%= product._id %>">
                                                    <button class="btn btn-danger">Delete</button>
                                                </form>
                                            </td>                                        
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <!-- End Table with hoverable rows -->

                    </div>
                </div>

            </div>
        </section>

        <div class="mt-5">
            <% if(typeof err !== 'undefined') { %>
              <script>
                Swal.fire({
                  title: "<%= err %>",
                  icon: "error",
                  showClass: {
                    popup: `
                      animate__animated-
                      animate__fadeInUp
                      animate__faster
                    `
                  },
                  hideClass: {
                    popup: `
                      animate__animated
                      animate__fadeOutDown
                      animate__faster
                    `
                  }
                });
              </script>
            <% } %>
            <% if(typeof message !== 'undefined'){ %>
              <script>
                Swal.fire({
                  title: "<%= message %>",
                  icon: "success",                              showClass: {
                    popup: `
                      animate__animated
                      animate__fadeInUp
                      animate__faster
                    `
                  },
                  hideClass: {
                    popup: `
                      animate__animated
                      animate__fadeOutDown
                      animate__faster
                    `
                  }
                });
              </script>                        
            <% } %>
        </div>

    </main>

    <!-- adding admin footer partials -->
    <!-- ======= Footer ======= -->
        <%- include('partials/adminFooter') %>
    <!-- End Footer -->

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

      const deleteForms = document.querySelectorAll('form[action="/admin/products/manage/delete"]');
    
      deleteForms.forEach(form => {
        form.addEventListener('submit', (event) => {
          event.preventDefault();
    
          Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
            if (result.isConfirmed) {
              form.submit(); 
            }
          });
        });
      });
    </script>
</body>
</html>